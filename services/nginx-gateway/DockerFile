FROM openresty/openresty:1.25.3.1-alpine

RUN apk add --no-cache bash gettext openssl

# Install lua-resty-hmac
RUN opm get jamesmarlowe/lua-resty-hmac

# Create directories for Lua scripts and templates
RUN mkdir -p /etc/nginx/lua /etc/nginx/templates

# Copy configuration
COPY conf.d/app.conf /etc/nginx/conf.d/app.conf
COPY nginx.conf /usr/local/openresty/nginx/conf/nginx.conf

# Copy includes (cors, proxy settings)
COPY includes/ /etc/nginx/includes/

# Copy Lua scripts
COPY lua/ /etc/nginx/lua/

CMD ["openresty", "-g", "daemon off;"]
